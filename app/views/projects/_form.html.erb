<%= form_with(model: project) do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", id: :project_name %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control", id: :project_description %>
  </div>

  <div class="form-group">
    <%= form.label :due_on %>
    <%= form.date_select :due_on, class: "form-control", id: :project_due_on %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
    <% cancel_path = (project.persisted? ? project_path(project) : projects_path) %>
    <%= link_to "Cancel", cancel_path, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
  </div>
<% end %>
