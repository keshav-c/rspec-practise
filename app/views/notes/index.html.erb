<p id="notice"><%= notice %></p>

<h1><%= @project.name %> - Notes</h1>

<table>
  <thead>
    <tr>
      <th>Message</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.message %></td>
        <td><%= note.user_name %></td>
        <td>
          <%= link_to 'Edit', edit_project_note_path(note.project, note),
            class: "btn btn-default btn-xs"
          %>
        </td>
        <td>
          <%= link_to 'Delete', [note.project, note], method: :delete,
            data: { confirm: 'Are you sure?' },
            class: "btn btn-danger btn-xs"
          %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Note', new_project_note_path(@project), class: "btn btn-default" %>
